<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.ekvedaras.classfactoryphpstorm</id>
    <name>ClassFactory</name>
    <vendor>ekvedaras</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor language="PHP"
                                  implementation="com.github.ekvedaras.classfactoryphpstorm.insideClassFactory.definition.ClassPropertyReferenceContributorForFactoryDefinition"/>
        <completion.contributor language="PHP"
                                implementationClass="com.github.ekvedaras.classfactoryphpstorm.insideClassFactory.definition.ClassPropertyCompletionContributorForFactoryDefinition"
                                order="first"/>

        <psi.referenceContributor language="PHP"
                                  implementation="com.github.ekvedaras.classfactoryphpstorm.insideClassFactory.state.ClassFactoryPropertyReferenceContributorForState"/>
        <completion.contributor language="PHP"
                                implementationClass="com.github.ekvedaras.classfactoryphpstorm.insideClassFactory.state.ClassPropertyCompletionContributorForFactoryState"
                                order="first"/>

        <psi.referenceContributor language="PHP"
                                  implementation="com.github.ekvedaras.classfactoryphpstorm.outsideClassFactory.make.ClassPropertyReferenceContributorForMakeMethod"/>
        <completion.contributor language="PHP"
                                implementationClass="com.github.ekvedaras.classfactoryphpstorm.outsideClassFactory.make.ClassPropertyCompletionContributorForMakeMethod"
                                order="first"/>

        <psi.referenceContributor language="PHP"
                                  implementation="com.github.ekvedaras.classfactoryphpstorm.outsideClassFactory.state.ClassPropertyReferenceContributorForStateMethod"/>
        <completion.contributor language="PHP"
                                implementationClass="com.github.ekvedaras.classfactoryphpstorm.outsideClassFactory.state.ClassPropertyCompletionContributorForStateMethod"
                                order="first"/>

        <localInspection language="PHP"
                         groupPath="PHP"
                         groupKey="name"
                         shortName="PropertyNotFound"
                         enabledByDefault="true"
                         bundle="messages.MyBundle"
                         key="classPropertyNotFound"
                         implementationClass="com.github.ekvedaras.classfactoryphpstorm.insideClassFactory.definition.PropertyNotFoundInspectionInDefinitionMethod"/>
    </extensions>

    <applicationListeners>
    </applicationListeners>
</idea-plugin>
